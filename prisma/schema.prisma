generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String?
  lastName     String?
  name         String?
  username     String?      @unique
  email        String       @unique
  password     String?
  phone        String?
  organization String?
  state        String?
  city         String?
  challenge    String?
  credentials  Credential[]
}

model Credential {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  credentialID String @unique
  publicKey    String
  counter      Int
  userId       String @db.ObjectId
  user         User   @relation(fields: [userId], references: [id])
}
