generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Role {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  permissions     Int             
  users           User[]
}

model Permission {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  bit             Int              
}
model User {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String?
  lastName     String?
  name         String?
  username     String?      @unique
  email        String       @unique
  password     String?
  phone        String?
  organization String?
  state        String?
  city         String?
  challenge    String?
  credentials  Credential[]
  roleId       String       @db.ObjectId
  role         Role         @relation(fields: [roleId], references: [id])
}

model Credential {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  credentialID String @unique
  publicKey    String
  counter      Int
  userId       String @db.ObjectId
  user         User   @relation(fields: [userId], references: [id])
}
